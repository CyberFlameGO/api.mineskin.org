{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "express",
      "express-fileupload",
      "body-parser",
      "mongoose",
      "morgan",
      "tunnel-ssh"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
